<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane fx:controller="com.groep3.Controller.MainScreenController" xmlns:fx="http://javafx.com/fxml" prefWidth="1280" prefHeight="720">
    <!-- Header bovenaan -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #333; -fx-padding: 10;">
            <!--<Label text="OrderIT!" style="-fx-text-fill: white; -fx-font-size: 18px;"/> -->
                <HBox spacing="10" style="-fx-background-color: #49bd13ff; -fx-padding: 10;">
                    <Label text="OrderIT!" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
                </HBox>
            </HBox>
    </top>

    <!-- Sidebar rechts -->


    <right>
        <VBox spacing="10" style="-fx-background-color: #eee; -fx-padding: 10;">
            <!-- Titel -->
            <HBox spacing="10" style="-fx-background-color: #333; -fx-padding: 10;">
                <Label text="Winkelmandje" style="-fx-text-fill: white; -fx-font-size: 18px;"/>
            </HBox>



            <!-- Lijst + Afrekenknop onder elkaar -->
            <VBox spacing="10" style="-fx-background-color: #ccc; -fx-padding: 10;">
                <ListView fx:id="cartList" prefHeight="200" prefWidth="150"/>
                <HBox spacing="10" style="-fx-background-color: #333; -fx-padding: 10;">
                    <Label text="'Bedrag'" style="-fx-text-fill: white; -fx-font-size: 10px;"/>
                </HBox>
                <Button text="Afrekenen" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

            
            </VBox>


        </VBox>
    </right>



    <!-- Hoofdcontent -->
    <center>
        <GridPane style="-fx-padding: 10;" fx:id="fruitItems" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
                <ColumnConstraints percentWidth="33.33"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="50"/>
                <RowConstraints percentHeight="50"/>
            </rowConstraints>
        </GridPane>
    </center>
</BorderPane>